<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="30dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp">

            <ImageView
                android:id="@+id/discussionImage"
                android:layout_width="270dp"
                android:layout_height="170dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/discussionTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/discussionImage" />

            <TextView
                android:id="@+id/discussionDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/discussionDetailsColor"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/discussionTitle" />

            <View
                android:id="@+id/discussionLikesDrawable"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/ic_heart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/discussionDetails" />

            <TextView
                android:id="@+id/discussionLikes"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:text="14"
                android:textColor="@color/discussionStatsTextColor"
                app:layout_constraintBottom_toBottomOf="@id/discussionLikesDrawable"
                app:layout_constraintStart_toEndOf="@id/discussionLikesDrawable"
                app:layout_constraintTop_toTopOf="@id/discussionLikesDrawable" />

            <View
                android:id="@+id/discussionViewsDrawable"
                android:layout_width="17dp"
                android:layout_height="0dp"
                android:layout_marginStart="40dp"
                android:background="@drawable/ic_views"
                app:layout_constraintBottom_toBottomOf="@id/discussionLikesDrawable"
                app:layout_constraintStart_toEndOf="@id/discussionLikes"
                app:layout_constraintTop_toTopOf="@id/discussionLikesDrawable" />

            <TextView
                android:id="@+id/discussionViews"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:text="48"
                android:textColor="@color/discussionStatsTextColor"
                app:layout_constraintBottom_toBottomOf="@id/discussionLikesDrawable"
                app:layout_constraintStart_toEndOf="@id/discussionViewsDrawable"
                app:layout_constraintTop_toTopOf="@id/discussionLikesDrawable" />

            <View
                android:id="@+id/discussionReplyDrawable"
                android:layout_width="17dp"
                android:layout_height="0dp"
                android:layout_marginStart="40dp"
                android:background="@drawable/ic_comment"
                app:layout_constraintBottom_toBottomOf="@id/discussionLikesDrawable"
                app:layout_constraintStart_toEndOf="@id/discussionViews"
                app:layout_constraintTop_toTopOf="@id/discussionLikesDrawable" />

            <TextView
                android:id="@+id/discussionReplyCount"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:text="25"
                android:textColor="@color/discussionStatsTextColor"
                app:layout_constraintBottom_toBottomOf="@id/discussionLikesDrawable"
                app:layout_constraintStart_toEndOf="@id/discussionReplyDrawable"
                app:layout_constraintTop_toTopOf="@id/discussionLikesDrawable" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>